# ignore all C/C++ source files
*.c linguist-detectable=false
*.h linguist-detectable=false
*.cc linguist-detectable=false
*.cpp linguist-detectable=false
*.hpp linguist-detectable=false
*.cxx linguist-detectable=false
*.hxx linguist-detectable=false

# ignore C object files and libraries
*.o linguist-detectable=false
*.a linguist-detectable=false
*.so linguist-detectable=false

# hide all editor samples
editor/samples/** linguist-generated=true

# ignore all scheme files
*.scm linguist-detectable=false